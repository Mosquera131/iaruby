<% content_for :title, "New form" %>

<%= render "form", form: @form %>

<br>

<div class="mt-4">
  <%= link_to "Back to forms", forms_path, class: "px-6 py-3 bg-gray-600 text-white font-semibold rounded-md shadow-md hover:bg-gray-700 transition duration-200" %>
</div>



<% if @form.errors.any? %>
  <div id="error_explanation" class="mt-6 p-4 bg-red-50 border border-red-300 rounded-md text-red-700">
    <h2 class="font-semibold text-lg"><%= pluralize(@form.errors.count, "error") %> prohibi√≥ que este formulario se guarde:</h2>
    <ul class="mt-2 list-disc list-inside">
      <% @form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
